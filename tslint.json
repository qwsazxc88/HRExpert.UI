{
"extends" : ["tslint:latest", "./codelyzer.json"],

	"rules" : {

		"indent" : [true, "spaces"],
		"linebreak-style" : [true, "CRLF"],
		"max-line-length" : [true, 140],
		"member-ordering" : [
			true,
			"static-before-instance"
		],
		"quotemark" : [true, "single"],
		"no-any" : false,
		"no-arg" : true,
		"ordered-imports" : false,
		"object-literal-sort-keys" : false,
		"member-access" : false,
		"curly" : false,
		"no-console" : false,

		"no-construct" : true,
		"no-duplicate-key" : true,
		"no-duplicate-variable" : true,
		"no-empty" : true,
		"no-eval" : true,
		"trailing-comma" : true,
		"no-trailing-whitespace" : true,
		"no-unused-expression" : true,
		"no-unused-variable" : [true, "check-parameters"],
		"no-unreachable" : true,
		"no-use-before-declare" : true,
		"one-line" : [
			true,
			"check-open-brace",
			"check-catch",
			"check-else",
			"check-whitespace"
		],
		"semicolon" : true,
		"triple-equals" : [true, "allow-null-check"],
		"variable-name" : [true, "ban-keywords"],
		"whitespace" : [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-separator",
			"check-type"
		]
	}
}
